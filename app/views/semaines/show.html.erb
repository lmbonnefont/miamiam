      <div class="col-xs-3 spacing" align="center">
        <span class ="day">Lundi</span>
        <br>
        <% recette = @jours.select{|j| j.date.monday?}[0].recette %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path recette.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="card-category"><%= recette.difficulté %></div>
          <div class="card-description">
            <h2><%= recette.nom %></h2>
            <p> temps en cuisine: <%= recette.cuisson + recette.preparation %> min</p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <%= link_to "", recette_path(recette), class: "card-link" %>
        </div>
      </div>


