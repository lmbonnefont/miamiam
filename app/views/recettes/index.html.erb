<div class="container">

  <p class="spacingvertical">Vos recettes</p>

  <div class="row">

   <% @recettes_persos.each do |recette| %>

      <div class="col-xs-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path recette.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="card-category"><%= recette.difficulté %></div>
          <div class="card-description">
            <h2><%= recette.nom %></h2>
            <p> temps en cuisine: <%= recette.cuisson + recette.preparation %> min</p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <%= link_to "", recette_path(recette), class: "card-link" %>
        </div>
      </div>

    <% end %>

  </div>

  <div class="row">
    <div class="col-sm-offset-4 spacingvertical">
      <%= link_to "Ajouter une recette", new_recette_path, class: "btn btn-danger btn-lg" %>
    </div>
  </div>


  <p>Les recettes de nos chefs étoilés</p>

  <div class="row">

    <% @recettes_chef.each do |recette| %>

      <div class="col-xs-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path recette.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="card-category"><%= recette.difficulté %></div>
          <div class="card-description">
            <h2><%= recette.nom %></h2>
            <p> temps en cuisine: <%= recette.cuisson + recette.preparation %> min</p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <%= link_to "", recette_path(recette), class: "card-link" %>
        </div>
      </div>

    <% end %>
  </div>

</div>





